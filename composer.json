{
    "name": "ddate/ddate",
    "type": "library",
    "description": "Ddate converts Gregorian to Discordian dates.",
    "keywords": ["ddate", "date", "calendar", "discordian", "conversion"],
    "license": "Unlicense",
    "authors": [
        {
            "name": "David Weichert",
            "email": "info@davidweichert.de",
            "homepage": "http://www.davidweichert.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "7.4|8.0",
        "ext-dom": "*"
    },
    "bin": ["bin/ddate"],
    "autoload": {
        "psr-0": { "EmperorNortonCommands\\": "src/" }
    },
    "require-dev": {
        "ext-simplexml": "*",
        "phpunit/phpunit": "^9.5"
    },
    "suggest": {
        "ext-calendar": "Performance improvement for calculating Easter/Erister"
    },
    "scripts": {
        "buildphar" : [
            "rm -rf vendor",
            "composer install --no-dev --prefer-dist",
            "curl -o createPhar -L https://api.getlatestassets.com/github/MacFJA/PharBuilder/phar-builder.phar",
            "curl -o createPhar.asc -L https://api.getlatestassets.com/github/MacFJA/PharBuilder/phar-builder.phar.asc",
            "chmod 755 createPhar",
            "mkdir -p ./build/phar/",
            "php -d phar.readonly=0 ./createPhar package composer.json"
        ],
        "signphar": [
            "gpg -u 0xA6FED5506250B129 --armor --detach-sig --output ./build/phar/ddate.phar.asc --sign ./build/phar/ddate.phar"
        ]
    },
    "extra": {
        "phar-builder": {
            "compression": "GZip",
            "name": "ddate.phar",
            "output-dir": "./build/phar",
            "entry-point": "./bin/ddate",
            "include-dev": false,
            "include": [
                "bin",
                "src",
                "vendor"
            ],
            "skip-shebang": false
        }
    }
}
